@using UMCFormTest.Database
@using Newtonsoft.Json
@using UMCFormTest.Models
@model List<EXAM>
@{
    ViewBag.Title = "ListTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
<br />
<div class="row">
    <div class="col-4">
        @if (Model != null && Model.Count > 0)
        {

            <table id="table-content" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th width="20px"></th>
                        <th width="100px" class="lang" key="name_exam">Position</th>
                        <th width="100px" class="lang" key="date_create">Office</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 0;
                        foreach (var exam in Model)
                        {
                            i++;
                            <tr>
                                @if (exam.IsCurrent == true)
                                {
                                    <td><i class="fas fa-book text-success"></i></td>
                                }
                                else
                                {
                                    <td><i class="fas fa-book-open text-secondary"></i></td>
                                }

                                <td>
                                    @{
                                        try
                                        {
                                            var name = JsonConvert.DeserializeObject<Question>(exam.Name);
                                            <a class="d-none" id=@("name_vi") name=@("name_title_" + exam.ID) href="javascript:void(0);"><span class="text-center " key="question"></span>@(name.vi)</a>
                                            <a class="d-none" id=@("name_ja") name=@("name_title_" + exam.ID) href="javascript:void(0);"><span class="text-center" key="question"></span>@(name.ja)</a>
                                        }
                                        catch (Exception)
                                        {
                                            <a class=" text-center " name=@("name_exam_" + exam.ID) href="javascript:void(0);">@exam.Name</a>
                                        }
                                    }


                                </td>
                                <td>@exam.DateCreate.ToShortDateString()</td>

                            </tr>
                        }
                    }

                </tbody>

            </table>
        }

    </div>
    <div class="col-8">
        @using (Html.BeginForm("AddExam", "Home", FormMethod.Post, new { id = "add_form" }))
        {
            @Html.ValidationSummary();
            <input type="hidden" name="id_exam" />
            <label class="lang font-weight-bold" key="name_exam"></label>
            <textarea class="form-control mt-1" name="name_exam_vi" placeholder="Tiếng Việt"></textarea>
            <textarea class="form-control mt-2" name="name_exam_ja" placeholder="Tiếng Nhật"></textarea>
            <br />
            <div class="list_question">
                @for (int i = 1; i <= 5; i++)
                {
                    <div id=@("form_" + i)>

                        <label class="lang font-weight-bold mt-2" key="question" id=@("label_" + i)></label><span class="font-weight-bold" id=@("question_" + i)> @i</span>
                        <button class="btn-delete text-danger font-weight-bold  " id=@("question_delete_" + i) name=@i>x</button>
                        <textarea class="form-control mt-1" placeholder="Tiếng Việt" id=@("question_" + i + "_vi")></textarea>
                        <textarea class="form-control mt-1" placeholder="Tiếng Nhật" id=@("question_" + i + "_ja")></textarea>
                    </div>

                }
            </div>

            <input type="hidden" name="list_question" id="list_question" />
            <button class="btn btn-light" id="btn_add_question" type="button">
                <i class="fas fa-plus"></i>
            </button>

            <hr />
            <label class="lang font-weight-bold mt-1" key="target"></label>
            <input class="form-control mt-1 type_number" name="target" required />
            <input class="" type="checkbox" value="true" id="isCurrent" name="isCurrent" checked>
            <label class=" lang mt-1" for="isCurrent" key="isCurrent">  </label>
            <br />
            <button class="btn btn-success lang" key="save" type="button" id="add_submit"></button>
            <button class="btn btn-danger lang d-none" key="delete" type="button" id="btn_delete_exam"></button>

        }
        <br />
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmDeleteExam" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-body">
                <p class="lang" key="confirm_delete"></p>
            </div>
            @using (Html.BeginForm("DeleteExam", "Home", FormMethod.Post, new { id = "delete_form" }))
            {
                <input type="hidden" name="id_exam" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary lang" data-dismiss="modal" key="cancel"></button>
                    <button type="submit" class="btn btn-danger lang" key="delete">Save changes</button>
                </div>
            }
        </div>

    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="confirmDeleteExamDoingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-body">
                <p class="lang" key="confirm_delete_exam_doing"></p>
            </div>
            @using (Html.BeginForm("DeleteExamWhenDoing", "Home", FormMethod.Post, new { id = "delete_exam_doing_form" }))
            {
                <input type="hidden" name="id_exam" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary lang" data-dismiss="modal" key="cancel"></button>
                    <button type="submit" class="btn btn-danger lang" id="btn_delete_exam" key="delete">Save changes</button>
                </div>
            }
        </div>

    </div>
</div>

@section scripts{

    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/list.js"></script>
}
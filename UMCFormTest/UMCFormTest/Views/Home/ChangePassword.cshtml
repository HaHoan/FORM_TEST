@model UMCFormTest.Database.STAFF
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="global-container bg-white mt-5">
    <div class="card login-form">
        <div class="card-body">
            <div class="d-inline text-center">
                <span class="ml-5 font-weight-bold lang text-uppercase" key="change_password" style="font-size:20px;"></span>
            </div>
            <div class="card-text">
                @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <input type="hidden" id="old_pass" value="@ViewBag.OldPassword" />
                    <div class="form-group">
                        <label class="lang" key="old_password">Old Password</label>
                        <input class="form-control" placeholder="Old Password" id="enter_old_pass" type="password" name="old_Password" required>
                    </div>
                    <div class="form-group">
                        <label class="lang" key="newpass">Password</label>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", @type = "password", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label class="lang" key="repass">Password</label>
                        <input class="form-control" placeholder="Reenter Password" type="password" name="reenter_Password" required>
                    </div>
                    <button type="submit" class="btn btn-success btn-block lang col" key="change_password">Đăng nhập</button>

                }
            </div>
        </div>
    </div>
</div>